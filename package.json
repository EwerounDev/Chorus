{
  "name": "chorus-desktop",
  "version": "1.0.0",
  "description": "Music streaming desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main.js --watch preload.js --exec electron .",
    "build": "electron-builder build"
  },
  "build": {
    "appId": "com.chorus.desktop",
    "productName": "Chorus",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/logo.ico"
    }
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "discord-rpc": "^4.0.1",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.5",
    "electron-store": "^8.2.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^152.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "NeteaseCloudMusicApi": "^4.27.0",
    "ngrok": "^5.0.0-beta.2",
    "uglify-js": "^3.17.4"
  },
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  }
}
